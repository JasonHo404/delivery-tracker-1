<div>
  <div>
    <h1>
      Delivery #<%= @the_delivery.id %> details
    </h1>

    <div>
      <div>
        <a href="/deliveries">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_delivery/<%= @the_delivery.id %>">
          Delete delivery
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_delivery.user_id %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_delivery.description %>
      </dd>

      <dt>
        Expected
      </dt>
      <dd>
        <%= @the_delivery.expected %>
      </dd>

      <dt>
        Detail
      </dt>
      <dd>
        <%= @the_delivery.detail %>
      </dd>

      <dt>
        Received
      </dt>
      <dd>
        <%= @the_delivery.received %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_delivery.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_delivery.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit delivery
    </h2>

    <form action="/modify_delivery/<%= @the_delivery.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_delivery.user_id %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_delivery.description %>">
      </div>

      <div>
        <label for="expected_box">
          Expected
        </label>

        <input type="date" id="expected_box" name="query_expected" value="<%= @the_delivery.expected %>">
      </div>

      <div>
        <label for="detail_box">
          Detail
        </label>

        <input type="text" id="detail_box" name="query_detail" value="<%= @the_delivery.detail %>">
      </div>

      <div>
        <input type="checkbox" id="received_box" name="query_received" value="1" <%= "checked" if @the_delivery.received %>>

        <label for="received_box">
            Received
        </label>
      </div>

      <button>
        Update delivery
      </button>
    </form>
  </div>
</div>

<hr>
